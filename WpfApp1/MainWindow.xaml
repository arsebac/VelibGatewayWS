        <Label Content="Choississez une station" HorizontalAlignment="Left" Margin="70,179,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboStation" SelectionChanged="stationSelected" DisplayMemberPath="name"  HorizontalAlignment="Left" Margin="50,220,0,0" VerticalAlignment="Top" Width="500"/>
        <Label Content="Vélos disponibles : " HorizontalAlignment="Left" Margin="50,280,0,0" VerticalAlignment="Top"/>
